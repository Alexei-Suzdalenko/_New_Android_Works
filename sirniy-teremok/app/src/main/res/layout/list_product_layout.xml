<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent" android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal">

  <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="33dp">

      <LinearLayout
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/admin_image_show"
                  android:contentDescription="@string/app_name"
                  android:src="@drawable/product"
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_marginTop="22dp"
                  android:text="@string/app_name"
                  android:textColor="@color/colorPrimaryText"
                  android:textSize="16sp"
                  android:id="@+id/admin_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:text="@string/app_name"
                  android:textColor="@color/colorPrimaryText"
                  android:textSize="16sp"
                  android:id="@+id/admin_price"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
          </LinearLayout>
      </LinearLayout>
  </com.google.android.material.card.MaterialCardView>
</LinearLayout>